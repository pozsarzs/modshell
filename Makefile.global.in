copyright	= @copyright@
name		= modshell
version		= @version@
architecture	= @architecture@
os              = @os@

prefix		= @prefix@
bindir		= @bindir@
datarootdir	= @datarootdir@
exec_prefix	= @exec_prefix@
libdir		= @libdir@
localedir	= @datarootdir@/locale
mandir		= @mandir@
srcdir		= @srcdir@
sysconfdir	= @sysconfdir@
vardir		= @vardir@

binmode		= 0755
txtmode		= 0644

fpc		= @fpc@
iconv		= @iconv@
install		= @install@
ln		= @ln@ -s -f
man		= @man@
make		= @make@
msgfmt		= @msgfmt@
rmdir		= @rmdir@
rm		= @rm@ -f
rstconv		= @rstconv@
unix2dos	= @unix2dos@

fpcargs		= -T@os@ \
                  -MObjFPC \
                  -Scgi \
                  -O1 \
                  -ve \
                  -Fu../convert/ \
                  -Fu../protcom/ \
                  -Fu../synapse/ \
                  -Fu. \
                  -Fu../lib/@architecture@-@os@/ \
                  -FE../lib/@architecture@-@os@/
